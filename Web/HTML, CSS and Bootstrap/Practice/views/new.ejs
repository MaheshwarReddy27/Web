<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label class="sr-only" for="name">Title:</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Title">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="image">Image URL</label>
                    <input type="text" class="form-control" id="image" name="image" placeholder="Image URL">
                </div>
                <button type="submit" class="btn btn-lg btn btn-primary btn-block">Submit</button>
            </form>
            <br>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<% include partials/footer %>